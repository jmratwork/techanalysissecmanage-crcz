[Unit]
Description=Fetch CTI feed for MISP
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/opt/misp/fetch_cti_feed.sh
EnvironmentFile=-/etc/misp/cti_feed.env
Restart=on-failure
RestartSec=10
StandardOutput=append:/var/log/misp/fetch_cti_feed.log
StandardError=append:/var/log/misp/fetch_cti_feed.log

[Install]
WantedBy=multi-user.target
